@model MyWheel.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}
<div class="white-container">

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        <div class="profile-jumb jumbotron">

            <img class="rounded-circle" src="@Url.Action("Photo", "Account" )" id="profile-picture" />
        </div>

        <h2>@ViewBag.Title @User.Identity.Name</h2>
        <hr />
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Change Details</h3>
                    <div class="d-flex justify-content-end social_icon">
                    </div>
                </div>
                <div class="card-body" style="color:white">

                    @using (Html.BeginForm("ProfilePic", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <p>
                            Email
                        </p>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" title="change Email"><i class="fas fa-envelope"></i></span>
                            </div>
                            <div class="input-group-append">
                                <span class="btn btn-grey disabled">@User.Identity.Name</span>
                            </div>

                        </div>
                        <p>
                            Password
                        </p>

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" title="change password"><i class="fas fa-key"></i></span>
                            </div>
                            <div class="input-group-append">
                                @if (Model.HasPassword)
                                {
                                    @Html.ActionLink("Change your password", "ChangePassword", new { }, new { @class = "btn btn-grey" })
                                }
                                else
                                {
                                    @Html.ActionLink("Create", "SetPassword", new { }, new { @class = "btn btn-grey" })
                                }
                            </div>

                        </div>

                        <p>
                            External logins @Model.Logins.Count
                        </p>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" title="manage external logins"><i class="fas fa-external-link-alt"></i></span>
                            </div>
                            <div class="input-group-append">
                                @Html.ActionLink("Manage", "ManageLogins", new { }, new { @class = "btn btn-grey" })
                            </div>

                        </div>



                        <p>
                            Photo
                        </p>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" title="upload profile picture"><i class="fas fa-id-badge"></i></span>
                            </div>
                            <div class="custom-file">
                                <label class="custom-file-label" for="fileUpload">Choose file</label>
                                <input name="Profile" id="fileUpload" type="file" class="custom-file-input" />
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn float-right">
                        </div>


                    }
                </div>
                <div class="card-footer">
                    Not @User.Identity.Name? <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                </div>
            </div>

        </div>
